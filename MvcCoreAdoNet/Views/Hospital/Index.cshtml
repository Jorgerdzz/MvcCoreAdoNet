@{
}
@model List<Hospital>

<h1>HOSPITALES</h1>

<table class="table table-primary">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Hospital hospital in Model)
        {
            <tr>
                <td>@hospital.Nombre</td>
                <td>@hospital.Direccion</td>
                <td>@hospital.Telefono</td>
                <td>
                    @Html.ActionLink("Details", "Details", "Hospital"
                    , new { id = @hospital.IdHospital})
                </td>
            </tr>
        }
    </tbody>
</table>

